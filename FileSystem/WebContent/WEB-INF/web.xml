<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>FileSystem</display-name> 
  
  <resource-env-ref>
    <description>DB Connection</description>
    <resource-env-ref-name>
    jdbc/testdb
    </resource-env-ref-name>
    <resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
  </resource-env-ref>
  
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>it.project.tiw.controllers.Register</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>it.project.tiw.controllers.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<servlet-class>it.project.tiw.controllers.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ExtractFolders</servlet-name>
    <servlet-class>it.project.tiw.controllers.ExtractFolders</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExtractFolders</servlet-name>
    <url-pattern>/ExtractFolders</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ExtractDocuments</servlet-name>
    <servlet-class>it.project.tiw.controllers.ExtractDocuments</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExtractDocuments</servlet-name>
    <url-pattern>/ExtractDocuments</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ExtractDocumentInfo</servlet-name>
    <servlet-class>it.project.tiw.controllers.ExtractDocumentInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExtractDocumentInfo</servlet-name>
    <url-pattern>/ExtractDocumentInfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DocumentMoveStart</servlet-name>
    <servlet-class>it.project.tiw.controllers.DocumentMoveStart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DocumentMoveStart</servlet-name>
    <url-pattern>/DocumentMoveStart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DocumentMoveEnd</servlet-name>
    <servlet-class>it.project.tiw.controllers.DocumentMoveEnd</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DocumentMoveEnd</servlet-name>
    <url-pattern>/DocumentMoveEnd</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>home.html</welcome-file>
  </welcome-file-list>
</web-app>